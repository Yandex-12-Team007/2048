.loading {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: 1s;

  &__wrapper {
    max-width: 640px;
    max-height: 640px;
  }

  &__icon {
    width: 100%;
    height: 100%;
  }
}

.loading_active {
  opacity: 1;
  transition: 1s;
}
