.sidebar {
  position: absolute;
  z-index: 2000;
  top: 0;
  bottom: 0;
  left: 0;
  width: var(--small-side-size);
  background: var(--second-bg);
  transition: var(--change-width);

  @media screen and (max-width: 600px) {
    width: 0;
  }
}

.sidebar_full {
  width: var(--full-side-size);
  border-right: 1px solid var(--gray);
}
