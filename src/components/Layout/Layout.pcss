.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: var(--main-bg);

  .content-wrapper {
    display: flex;
    flex-direction: column;
    flex: 1 0 auto;
    position: relative;
    width: 100%;

    .content {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
  height: 100%;
}
