.login-layout {
  background-color: var(--second-bg);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100%;

  &__logo {
    margin-bottom: 40px;
  }

  &__form {
    width: 340px;
    background-color: var(--main-bg);
    box-shadow: 0 0 6px rgb(0 0 0 / 14%);
    border-radius: 12px;
    padding: 50px 30px 20px;
    text-align: center;
  }
}
