.forum-badge {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  max-width: 160px;
  width: 100%;
  min-height: 180px;
  margin-right: 15px;

  &__img {
    object-fit: cover;
    height: 160px;
    width: 160px;
    border-radius: 50%;
    margin-bottom: 15px;
  }

  &__default-img {
    background-color: var(--light-gray);
  }

  &__user-name {
    color: var(--orange);
    font: var(--title-font);
  }
}
