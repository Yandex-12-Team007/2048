.forum-badge {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  max-width: 120px;
  width: 100%;
  max-height: 160px;
  padding: 0 10px 10px;

  &__img {
    width: 100%;
    max-width: 140px;
    height: 80px;
    margin-bottom: 15px;
  }

  &__default-img {
    background-color: var(--light-gray);
  }
}
