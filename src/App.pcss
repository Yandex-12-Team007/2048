@import "reset-css";

@font-face {
  font-family: Inter;
  font-style: normal;
  font-weight: 500;
  src:
    url("./static/fonts/Inter/Inter-Medium.woff2") format("woff2"),
    url("./static/fonts/Inter/Inter-Medium.woff") format("woff"),
    url("./static/fonts/Inter/Inter-Medium.ttf") format("ttf");
}

:root {
  /* Colour */
  --main-bg: #fbf8f1;
  --second-bg: #eee4da;
  --third-bg: #72685d;
  --gray: #7c746b;
  --light-orange: #f0b17b;
  --middle-orange: #f59565;
  --orange: #f57c5f;
  --main-text-color: #72685d;
  --second-text-color: #999;
  --error-text-color: #ff2f2f;
  --light-gray: #efefef;
  --icon-background: #000;
  --icon-background-hover: #fff;

  /* Fotn */
  --default-font: normal 14px inter, sans-serif;
  --title-font: normal 20px inter, sans-serif;

  /* Width */
  --small-side-size: 64px;
  --full-side-size: 280px;

  /* Width transition */
  --change-width: width 0.5s ease-in-out;
}

button,
input[type="submit"],
input[type="reset"] {
  background: none;
  color: inherit;
  border: none;
  padding: 0;
  font: inherit;
  cursor: pointer;
  outline: inherit;
}

a,
a:active, /* активная/посещенная ссылка */
a:hover,  /* при наведении */ {
  text-decoration: none;
  color: inherit;
}

#root {
  width: 100vw;
  height: 100vh;
}

.app {
  position: relative;
  width: 100%;
  height: 100%;

  &__theme-switcher {
    position: absolute;
    right: 10px;
    top: 80px;
    z-index: 1;
  }

  &--dark-theme {
    --main-bg: #444;
    --second-bg: #333;
    --main-text-color: #fbf8f1;
    --second-text-color: #ddd;
    --icon-background: #fff;
    --icon-background-hover: #ddd;
  }
}

html {
  box-sizing: border-box;
  font-family: Inter, sans-serif;
}

*,
*::before,
*::after {
  box-sizing: inherit;
  font-family: Inter, sans-serif;
}

p {
  margin: 0;
}

body {
  height: 100vh;
  margin: 0;
  overflow: hidden;
}
